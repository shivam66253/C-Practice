#include<stdio.h>
int main(){
    int n;
    printf("enter a number : ");
    scanf("%d",&n);
    int sum=0;
    int ld=0;
    while(n!=0){
        ld=n%10;
        if(ld%2!=0)// 168%10=8, sum = 8,16%10=6,
        continue;
        sum = sum+ld;
        n = n/10;
        
        
    }
    printf("the sum digits are %d",sum);
    return 0;
}
